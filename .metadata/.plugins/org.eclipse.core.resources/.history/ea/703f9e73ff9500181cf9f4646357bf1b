package hello;

import java.util.Scanner;

public class ExerciseDay1 {

	public static void main(String[] args) {
		
		Scanner input = new Scanner(System.in);
		boolean continue_ = false;
		
		do {
			
			System.out.print("Input a number from 1 to 20");
			int num = input.nextInt();
			
			int randomNum = (int)(Math.random()*20);
			int counter = 0;
			
			if(num < 0 && num > 20) {
				
				System.out.println("Please input a number that is within range.");
				continue_ = true;
				
			} else {
				
				if(num > randomNum && num < randomNum) {
					
					System.out.println("Wrong! You haven’t guessed the number");
					counter++;
					continue_ = true;
					
				} else {
					
					++counter;
					System.out.println("Congrats! You won!");
					continue_ = false;
					
				}
				
			}
			
		} while(continue_);
		input.close();

	}

}
